<UserControl x:Class="ActionBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Streamlink_for_Windows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="#7F000000" Foreground="White">
    <Grid x:Name="ControlGrid" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <local:SimpleHintTextBox x:Name="SearchTextBox" Padding="10,0,0,0" Foreground="White" Background="Transparent"/>
        <local:Button x:Name="SearchButton" Grid.Column="1" Icon="search" Foreground="White" Background="Transparent" MouseInteractionStyle="True"/>
    </Grid>
</UserControl>