<UserControl x:Class="Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Streamlink_for_Windows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Foreground="White" Background="Transparent">
    <Grid x:Name="MainGrid">
        <Grid x:Name="ChildGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="IconColumn" Width="Auto"/>
                <ColumnDefinition x:Name="TextColumn"/>
            </Grid.ColumnDefinitions>
            <local:IconTextBlock x:Name="IconTextBlock" Margin="5,0"/>
            <TextBlock x:Name="LabelTextBlock" Grid.Column="1" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Foreground="White" Margin="5,0"/>
        </Grid>
    </Grid>
</UserControl>