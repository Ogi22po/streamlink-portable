<UserControl x:Class="ButtonWithStyle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Streamlink_for_Windows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Foreground="White" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="IconColumn" Width="0"/>
            <ColumnDefinition x:Name="TextColumn"/>
        </Grid.ColumnDefinitions>
        <Viewbox>
            <TextBlock x:Name="IconTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="/Streamlink for Windows;component/Resources/#Material Icons"/>
        </Viewbox>
        <TextBlock x:Name="LabelTextBlock" Grid.Column="1" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Margin="10,0,0,0" Foreground="White"/>
    </Grid>
</UserControl>
